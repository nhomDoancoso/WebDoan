@model WebDoan.Models.SANPHAM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail</title>
    <link href="~/Content/Images/haircut.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body style=" display: flex; justify-content: center; font-family:Arial, Helvetica, sans-serif">
    <div style=" border: 1px solid #ccc; text-align: center; border-radius: 10px; background: #fff;" class="d-flex justify-content-center container mt-5">
        <div class="card p-3 bg-white">
            <i class="fa fa-apple"></i>
            <div class="about-product text-center mt-2">
                <img src="@Html.DisplayFor(model => model.Hinh)" width="300">
                <div>
                    <span style=" font-size: 1.5rem; font-weight: bold;">Believing is seeing</span><br />
                    <span>@Html.DisplayFor(model => model.TenSP)</span>
                </div>
            </div>
            <div class="stats mt-2">
                <div class="d-flex justify-content-between p-price">
                    <span>@Html.DisplayFor(model => model.Gia) đ</span>
                </div>
            </div>
            @*<div class="d-flex justify-content-between total font-weight-bold mt-4"><span>Total</span><span>$7,197.00</span></div>*@
        </div>
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>

</body>
</html>

<style>
    .card {
        width: 444px;
    }

    body {
        background: #eee;
    }
    p a {
        text-decoration: none;
        padding: 0.5rem 2rem;
        border: 1px solid #ccc;
        border-radius: 10px;
    }
    p a:hover {
        color:blue;
    }
</style>