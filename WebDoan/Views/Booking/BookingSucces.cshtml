@model WebDoan.Models.PHIEUDAT

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BookingSucces</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div style="text-align:center">
        <i class="fa-duotone fa-shield-check"></i>
        <h2>@ViewBag.Message</h2>
        <p>Mã Phiếu hẹn: @ViewBag.MaPD</p>
        <p>Tên khách hàng: @ViewBag.TenKH</p>
        <p>Số điện thoại: @ViewBag.SDT</p>
        <p>Tên khân viên: @ViewBag.TenNV</p>
        <p>Thời gian tạo: @ViewBag.TGLAP</p>
        <p>Thời gian Hen: @ViewBag.ff</p>
        <p>Ngay Hen: @ViewBag.ThoiGianHen</p>
        <p>ghi chú: @ViewBag.ghiChu</p>
        @if (Model.TrangThaiPhieuDat == true)
        {
            <p>Trạng thái: <span>chưa xác nhận</span></p>
        }
        else
        {
            <p>Trạng thái:  <span> xác nhận</span></p>
        }
        <p>Địa chỉ: @ViewBag.CHINHANH</p>
        <span>
            @Html.ActionLink("Trở Lại", "Index", "Footer", new { @class = "btn btn-success " })
            @Html.ActionLink("Edit", "Edit", new { id = Model.MaPD })
        </span>
        <span>
            @Html.ActionLink("Delete", "Delete", new { id = Model.MaPD })
        </span>
    </div>

</body>
</html>

<style>
    span a {
        color: black;
        text-decoration: none;
        padding: 1rem 2rem;
        border-radius: 10px;
        color: white;
        background: black;
        cusor: pointer;
    }
</style>