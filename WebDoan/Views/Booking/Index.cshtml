@model WebDoan.Models.PHIEUDAT
@{
    Layout = null;
    <link href="~/Content/Images/haircut.ico" rel="shortcut icon" type="image/x-icon" />
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/booking.css" rel="stylesheet" />
    <link href="~/Content/css/Global.css" rel="stylesheet" />
</head>
<body>
    <section class="booking">
        <div class="wrap-title">
            <div class="title"> </div>
            <span>Booking</span>
        </div>

        <h2 class="title-big" style="font-family: 'Playfair Display', serif;">Make An Appointment.</h2>


        @using (Html.BeginForm("Index", "Booking", FormMethod.Post))
        {

            <div class="booking-input">
                <span>Mã Phiếu đặt</span>
                  @Html.TextBoxFor(model => model.MaPD, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "ma phieu đặt   " })
            </div>
            <div class="booking-input">
                <span>Tên khách hàng</span>
                @Html.DropDownList("MaKH", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KHACHHANG.TenKH, "", new { @class = "text-danger" })
                @*  @Html.TextBoxFor(model => model.TenKH, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên khách hàng" })*@
            </div>

            <div class="booking-input">
                <span>số điện thoại</span>
                @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", @autofocus = "autofocus", @id = "value-number", @placeholder = "Phone number" })
            </div>
            <div class="wrap-input">
                <div class="booking-input">
                    <span>Select Staff</span>
                    @Html.DropDownList("TenNV", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NHANVIEN.MaNV, "", new { @class = "text-danger" })
                </div>
                <div class="booking-input">
                    <span>Select Location</span>
                    @Html.DropDownList("MaCN", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CHINHANH.MaCN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="wrap-input">
                <div class="booking-input">
                    <span>Choose Your Date</span>
                    @Html.TextBoxFor(model => model.TimeHen, new { @type = "date", @class = "form-control", @autofocus = "autofocus", @id = "value-number", @placeholder = "Phone number" })
                </div>
                <div class="booking-input">
                    <span>Enter Your Time</span>
                    @Html.TextBoxFor(model => model.TimeLap, new { @type = "time", @class = "form-control", @autofocus = "autofocus", @id = "value-number", @placeholder = "Phone number" })
                </div>
            </div>

            <input type="submit" class="btn-submit" value="Booking">
        }
    </section>
</body>
</html>
