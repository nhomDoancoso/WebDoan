@model WebDoan.Models.PHIEUDAT
@{
    Layout = null;
    <link href="~/Content/Images/haircut.ico" rel="shortcut icon" type="image/x-icon" />
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/booking.css" rel="stylesheet" />
    <link href="~/Content/css/Global.css" rel="stylesheet" />
</head>
<body>
    <section class="booking">
        <div class="wrap-title">
            <div class="title"> </div>
            <span>Booking</span>
        </div>

        <h2 class="title-big" style="font-family: 'Playfair Display', serif;">Make An Appointment.</h2>


        @using (Html.BeginForm("Index", "Booking", FormMethod.Post))
        {
            <div class="wrap-input">
                <div class="booking-input">
                    <span>mapD</span>
                    @Html.TextBoxFor(model => model.MaPD, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "FullName" })
                </div>

                <div class="booking-input">
                    <span>Full name</span>
                    @Html.TextBoxFor(model => model.KHACHHANG.TenKH, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "FullName" })
                </div>

                <div class="booking-input">
                    <span>Email address</span>
                    @Html.TextBoxFor(model => model.KHACHHANG.Email, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Email Address" })
                </div>
            </div>

            <div class="booking-input">
                <span>Phone</span>
                @Html.TextBoxFor(model => model.KHACHHANG.SDT, new { @class = "form-control", @autofocus = "autofocus", @id = "value-number", @placeholder = "Phone number" })
            </div>
            <div class="wrap-input">
                @RenderPage("Index2.cshtml")
                @RenderPage("Index1.cshtml")
            </div>

            <div class="wrap-input">
                <div class="booking-input">
                    <span>Choose Your Date</span>
                    @Html.TextBoxFor(model => model.TimeHen, new { @type = "date", @class = "form-control", @autofocus = "autofocus", @id = "value-number", @placeholder = "Phone number" })
                </div>
                <div class="booking-input">
                    <span>Enter Your Time</span>
                    @Html.TextBoxFor(model => model.TimeLap, new { @type = "time", @class = "form-control", @autofocus = "autofocus", @id = "value-number", @placeholder = "Phone number" })
                </div>
            </div>

            <input type="submit" class="btn-submit" value="Booking">
        }
    </section>
</body>
</html>
