@model WebDoan.Models.DICHVU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="text-align:center">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDV)

        <div class="form-group">
            <strong> Services Name</strong>
            <div class="col-md-10" style="width: 100%; padding: 0 12%;">
                @Html.EditorFor(model => model.TenDV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDV, "", new { @class = "text-danger" })
                @ViewData["Error"]
            </div>
        </div>

        <div class="form-group">
            <strong>Price</strong>
            <div class="col-md-10" style="width: 100%; padding: 0 12%;">
                @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                @ViewData["Price"]
            </div>
        </div>
        <div class="form-group">
            <strong>
                Service Type ID

            </strong>
            <div class="col-md-10" style="width: 100%; padding: 0 12%;">
                @Html.DropDownList("MaLoaiDV", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaLoaiDV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="width: 100%; padding: 0 12%; margin: 1rem 0">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>

        <div class="button-86">
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
}


<style>
    .button-86 a {
        all: unset;
        width: 100px;
        height: 30px;
        font-size: 16px;
        background: transparent;
        border: none;
        position: relative;
        color: #f0f0f0;
        cursor: pointer;
        z-index: 1;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }

        .button-86 a::after,
        .button-86 a::before {
            content: '';
            position: absolute;
            bottom: 0;
            right: 0;
            z-index: -99999;
            transition: all .4s;
        }

        .button-86 a::before {
            transform: translate(0%, 0%);
            width: 100%;
            height: 100%;
            background: #28282d;
            border-radius: 10px;
        }

        .button-86 a::after {
            transform: translate(10px, 10px);
            width: 35px;
            height: 35px;
            background: #ffffff15;
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
            border-radius: 50px;
        }

        .button-86 a:hover::before {
            transform: translate(5%, 20%);
            width: 110%;
            height: 110%;
        }

        .button-86 a:hover::after {
            border-radius: 10px;
            transform: translate(0, 0);
            width: 100%;
            height: 100%;
        }

        .button-86 a:active::after {
            transition: 0s;
            transform: translate(0, 5%);
        }
