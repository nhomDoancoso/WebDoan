                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenLoaiDV)
                                    </td>
                                    <td class="button-24 d-flex d-sm-flex d-lg-flex justify-content-center align-items-lg-center align-items-sm-center ">

                                        @Html.ActionLink("Edit", "Edit", new { id = item.MaLoaiDV })
                                        @Html.ActionLink("Details", "Detail", new { id = item.MaLoaiDV })
                                        <form action="@Url.Action("Delete", "LoaiDV", new { id = item.MaLoaiDV })" method="post" style="display:inline">
                                            <input type="hidden" name="id" value="@item.MaLoaiDV" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('are you sure?')">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

